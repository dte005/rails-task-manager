<%= form_for @task do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Details" %>
  <%= f.text_field :details %>

  <%= f.label :completed, "Completed" %>
  <%= f.check_box :completed %>
  <!-- = f.check_box :public, {}, "true", "false" -->
  <%= f.submit %>
<% end %>
